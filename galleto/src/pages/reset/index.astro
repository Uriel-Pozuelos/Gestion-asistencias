---
import { Card, CardContent, CardHeader } from '@/components/ui/card';
import Layout from '@/layouts/Layout.astro';
import ResetLogin from '@/components/reset/ResetPassword';
const cookie = Astro.request.headers.get('cookie');
if (cookie && cookie.includes('auth')) {
    Astro.redirect('/home');
}
---

<Layout title="Bienvenido a la tienda Don Galleto">
    <main class="h-screen w-screen flex">
        <div class="my-auto mx-auto">
            <Card
                className="bg-[#1C020C] text-white flex flex-col items-center justify-center  py-2 w-full border-transparent"
            >
                <CardHeader>
                    <div class="mt-3 mb-2">
                        <img
                            class="img-logo"
                            src="/logo_dg_text.webp"
                            alt="logo-donG"
                            transition:name="hero"
                        />
                    </div>
                </CardHeader>
                <CardContent>
                    <ResetLogin client:idle />
                </CardContent>
            </Card>
        </div>
    </main>
</Layout>
