import { fade } from 'astro:transitions';
---

<nav>
	<a href="/home"
		><img src="/logo_dg.webp" alt="Logo Don G" width="60px" /></a
	>
	<div>
		<ul>
			<li><a href="/compra">Venta</a></li>
			<li><a href="/inventario">Inventario</a></li>
			<li><a href="/ganancias">Ganancias</a></li>
			<li><a href="/inventario/gestion">Gesti&oacute;n</a></li>
			<li><a href="/dashboard">Dashboard</a></li>
			<li id="out">
				<button>logout</button>
			</li>
		</ul>
	</div>
</nav>

<script type="module">
	document
		.getElementById('out')
		.addEventListener('click', async () => {
			const res = await fetch('/api/logout', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				}
			});

			if (res.ok) {
				window.location.href = '/';
			}
		});
</script>

<style>
	nav {
		background-color: #1c020c;
		color: #ffffff;
		display: flex;
		width: 100%;
		height: 60px;
		padding: 0 10px;
	}

	nav div {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-grow: 1;
	}

	nav div ul {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	nav ul li {
		list-style: none;
		margin: 0 10px;
	}

	nav ul li a {
		text-decoration: none;
		color: #ffffff;
	}

	nav ul li a:hover {
		color: #ffb670;
	}

	nav ul li a:hover {
		color: #ffb670;
	}

	nav ul li a:active {
		color: #ff8300;
	}
</style>
